	<li><%= link_to "Mirror of <i>CM Engine v1.42</i> for ImageJ <strong>v1.42</strong>".html_safe, "#{ENV['RAILS_RELATIVE_URL_ROOT']}/cm_engine/cm engine_ImageJ1.42.txt" %></li>
	<li><%= link_to "Mirror of <i>CM Engine</i> instruction manual.".html_safe, "#{ENV['RAILS_RELATIVE_URL_ROOT']}/cm_engine/cm engine supplement.pdf" %></li>
