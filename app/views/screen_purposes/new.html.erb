<%= stylesheet_link_tag 'validation', "data-turbolinks-track" => true %>
<%= javascript_include_tag 'validationJQ', "data-turbolinks-track" => true  %>
<script type="text/javascript" charset="utf-8">
	$(document).ready(function(){
		$("#theForm").validate({ignoreTitle: true});
	});
</script>
<%= render partial: "layouts/top" %>

<%= errors_for_helper(@screen_purpose) %>

<%= form_for @screen_purpose, html: {style:"padding:0px;", id:"theForm"} do |f| %>
  <label for="purpose" class="required">Density Value:</label>
  <%= f.text_field :purpose, {:class=>"formInputText required", :size=>30} %>
  <br/>
	<%= submit_tag 'Create!', :class=>"commit" %>
<% end %>
<br/>
