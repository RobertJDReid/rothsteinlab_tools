<%= render :partial => "errors" %>

<%= form_for @pwj_plasmid, html: {style:"padding:0px;", id:"theForm"} do |f| %>
<br/>

<label for="number" class="required">Full pWJ Number (i.e. preceeded with pWJ):</label>
<%= f.text_field :number, {:class=>"formInputText required",:size => 30, :title => "This should the pWJ #"} %>

<label for="promoter" class="required">Promoter Driving Expression:</label>
<%= f.text_field :promoter, {:class=>"formInputText required",:size => 30} %>

<label for="gene" class="required">Gene Expressed:</label>
<%= f.text_field :gene, {:class=>"formInputText required",:size => 30} %>

<label for="yeast_selection" class="required">Yeast Selectable Marker:</label>
<%= f.text_field :yeast_selection, {:class=>"formInputText required",:size => 50} %>

<label for="bacterial_selection" class="required">Bacterial Selectable Marker:</label>
<%= f.text_field :bacterial_selection, {:class=>"formInputText required",:size => 50} %>

<label for="parent" class="required">Parent Plasmid (e.g., pWJ1512):</label>
<%= f.text_field :parent, {:class=>"formInputText required",:size => 50} %>

<label for="empty_vector" class="required">Is this an empty vector?:</label>
<%= f.check_box :empty_vector, {:class=>"formInputText"}, 1, 0 %>

<label for="comments" class="required">Comments:</label>
<textarea id="comments" name="pwj_plasmid[comments]" style="margin-right: 10px;margin-bottom: 10px;width:auto;" wrap="off" rows="4" cols="40" class="required formInputText"><%=@pwj_plasmid.comments%></textarea>

<label for="created_by" class="required">Made By:</label>
<% selected = @pwj_plasmid.created_by ? @pwj_plasmid.created_by : current_user.login %>
<%= select "pwj_plasmid", "created_by",  @users.map {|u| [u.login,u.login]}, {:selected=>selected}, {:class=>"required formSelect" }%>

<label for="updated_by" class="required">Updated By:</label>
<%=current_user.login%><br/>
<br/>
<%= submit_tag @buttonLabel, :class=>"commit"  %><br/>

<% end %>