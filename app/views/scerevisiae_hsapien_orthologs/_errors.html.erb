<% if(@scerevisiaeHumanOrtholog).errors.any? %> 
	<div class="error" >
		<strong>The following errors occurred:</strong></br><br/>
		<ul>
	<% (@scerevisiaeHumanOrtholog).errors.each do |field,msg| %> 
		<% if msg =~ /already exists/i %>
			<li><%=msg%></li>
		<%else%>
			<% field = "Human Ensembl ID" if field =~ /humanEnsemblID/ %>
			<% field = "Human Gene Name" if field =~ /humanGeneName/ %>
			<% field = "Yeast ORF" if field =~ /yeastOrf/ %>
			<li><%= "#{field}: #{raw(msg)}" %></li> 
		<%end%>
	<% end %> 
	</ul></div>
<% end %>