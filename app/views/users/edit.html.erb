<%= render "form" %>
<%= form_for @user do |f| %>
	<fieldset style="border:0px solid;">

	<label for="user_login"><strong>Login:</strong><br/>
	<%= f.text_field :login, {:class=>"formInputText",:size => 20} %></label>
	<label for="user_email"><strong>Email:</strong><br/>
	<%= f.text_field :email, {:class=>"formInputText",:size => 20} %></label>	

	<br/>
	<h2 style="padding:30px 0px 0px 0px;margin:0px 0px 0px -5px">Change Password:</h2>

	<label for="user_current_password"><strong>Current Password:</strong><br/>
	<%= f.password_field :current_password, {:class=>"formInputText",:size => 20}  %></label>
	
	<label for="user_password"><strong>New Password:</strong><br/>
	<%= f.password_field :password, {:class=>"formInputText",:size => 20}  %></label>

	<label for="user_password_confirmation"><strong>New Password Confirmation</strong><br/>
	<%= f.password_field :password_confirmation, {:class=>"formInputText",:size => 20}  %></label>
	
	<br/>
	<br/>
	<%= submit_tag "Submit", :class=>'commit' %>

	</fieldset>
<%end %>
