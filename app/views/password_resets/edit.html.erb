<%= stylesheet_link_tag 'show' %>
<%= render :partial => "layouts/top" %>

<% if @user.errors.any? %>
<div id="error" class="error"><ul>
<% @user.errors.each do |attr, msg| %><li><%= msg  %></li><%end%></ul></div>
<%= javascript_tag "$('#error').effect('highlight',{},1000);" %>
<%end%>


<%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
  <fieldset style="border:0px solid;">
    <label for="user_password"><strong>New Password:</strong><br/>
    <%= f.password_field :password, {:class=>"formInputText",:size => 20}  %></label>
    <label for="user_password_confirmation"><strong>New Password Confirmation</strong><br/>
    <%= f.password_field :password_confirmation, {:class=>"formInputText",:size => 20}  %></label>
    <br/><br/>
    <%= submit_tag "Reset Password", :class=>'commit' %><br/>
  </fieldset>
<%end%>
