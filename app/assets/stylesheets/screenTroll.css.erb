div fieldset{float:left;}
legend{letter-spacing:0.03em;}
.formTable{padding-left:10px;}
#spinner{border-width:0px;}
#covert{margin-left:5px;}
#covert, #spinner, #spinner1{float:left;}
.resultDiv{clear:left;}

.loading{
	font-size:1.3em;
	margin-left:15px;
	float:left;
}
label{
	font-weight:bold;
	font-size:1.2em;
}
#error{
	width: auto;
	float:left;
  margin-top: 10px;
	font-size:1.3em;
	font-weight:bold;
}

.commit{
	font-size:1.3em;
	float:left;
	margin-left:5px;
}

fieldset{
	border: 3px solid #AAAAAA;
	height:auto;
	margin-right:30px;
	padding:5px;
	float:left;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	border-radius: 4px;
}
legend{
	color: black;
	font-weight: bold;
	font-size:2em;
	font-variant: small-caps;
	padding: 2px 8px;
}
textarea{
	font-size:1.5em;
	font-family: 'Lucida Grande';
}
table tr td{text-align:center;}
table tr td.left{text-align:left;}

.linkList a{font-size:1.3em;}
ul.linkList{padding-left:0px;margin-left:0px;float:left;}

.ajaxy{float:left;padding:5px 5px 5px 0px;}
.ajaxy:hover{text-decoration:underline;}

.window {
	background: url(<%= asset_path "css/window_background_dark.png" %>) repeat;
	background-position:top left;
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	padding:10px;
	font-family:"Lucida Grande",Verdana;
	font-size:13px;
	font-weight:bold;
	color:fff;
	min-width:150px;
	min-height:100px;
	color:white;
	width:500px;
}

.window .window_contents {
	margin-top:10px;
	width:100%;
	height:100%;
}

.window .window_header {  text-align:center;	}

.window .window_title {
	margin-top:-7px;
	margin-bottom:7px;
	font-size:11px;
	cursor:move;
	font-size:1.3em;
	padding-bottom:5px;
	border-bottom:1px solid;
}

.window .window_close {
	display:block;
	position:absolute;
	top:4px;
	left:5px;
	height:13px;
	width:13px;
	background-image:url(<%= asset_path "css/window_close.gif"%>);
	cursor:pointer;
	cursor:hand;
}
.underRep{color:blue;font-style: italic;}