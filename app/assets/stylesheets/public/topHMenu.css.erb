.menu2 {
  position: absolute;
  top:81px;
  font-size:1.3em;
  margin:0px;
  height:57px;
}

.menu2 .mainMenu{
  white-space: nowrap;
  padding-right: 10px;
  height:30px;
  background: url(<%= asset_path 'css/navy_on.png'%>) repeat-x;
  -webkit-border-radius: 8px;
  -moz-border-radius: 8px;
  border-radius: 8px;

}
.menu2 ul {
  top:7px;
  position:relative;
  padding:0;
  padding-left:115px;
  z-index:20;
}

.menu2 ul li, .menu2 ul li a{
	color:white;
  display:inline;
  z-index:33;
  padding:2px 2px 10px 2px;
}

.menu2 a { height:25px; }

.subMenus ul{
  position:absolute;
  display:none;
  left:-1000px;
  top:-1000px;
}

.showSub ul{
  overflow:visible;
  position:relative;
  display:block;
  left:0px;
  top:0px;
	z-index:21;
	margin:0px;
	padding:0px;

}
.showSub ul li{
	display:block;
	margin:0px;
	padding:0px 18px 0px 0px;
}

.showSub ul li a{
	float:left;
	width:100%;
	background:#7878F0 url(<%= asset_path 'css/leftArrow.png'%>) no-repeat 5px 50%;
	margin:0px 0px;
	padding:3px 0px 0px 16px;
	z-index:99;
}

.showSub{
	float:left;
	position:relative;
	z-index:95;
	padding:0px;
	margin:2px 0px 0px 0px;
	background:#7878F0;
	padding-top:5px;
}

.menu2 li.current, .menu2 li.current a{
  font-style: italic;
  color:#b5d5ff;
	font-weight:bold;
}

.menu2 .mainMenu a:hover, .menu2 .mainMenu span:hover{
  background:#7878F0;
	color:#00016F;
}

.menu2 .mainMenu span:hover{background:#7878F0 url(<%= asset_path 'css/downArrowWhite.png'%>) no-repeat 2px 50%;}

.menu2 .mainMenu span{
	background:transparent url(<%= asset_path 'css/downArrowWhite.png'%>) no-repeat 2px 50%;
	padding-left:15px;
}

.menu2 .subMenus a:hover{color:#00016F;}
