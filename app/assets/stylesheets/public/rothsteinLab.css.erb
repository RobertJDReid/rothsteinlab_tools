#sideBar{
  position:absolute;
	display:block;
	text-decoration:none;
	top:150px;
	width:25px;
	height:100px;
	font-weight:bold;
	background:transparent url(<%= asset_path 'menu/tab.gif' %>) top left no-repeat
}

#sideBar div{
	position:absolute;
	left:0px;
	top:-11px;
	background:#FFFFFF;
	display:none;
	border-color:black;
  border-width: 0px 2px 2px 0px;
  border-style: solid;
}
#sideBar div a{	color:#000000;}
#sideBar div a:visited{	color:#BFBFBF;}
#sideBar:hover div{  display:block;}
