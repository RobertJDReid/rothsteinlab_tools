/*note -- for zoom to work properly the width and height attributes MUST be set in #zoom, not #zoomContainer */
#zoom{
	position: relative;
	width:400px;
	height:400px;
	overflow:hidden;
	padding:0;
}

#mousePos{
	position:absolute;
	background-color:rgba(255,255,255,0.5);
	z-index:99999;
}

#followMouseX{
	position:absolute;
	height:1px;
	border-top:1px dotted blue;
	z-index:99999;
}

#followMouseY{
	position:absolute;
	width:1px;
	border-left:1px dotted blue;
	z-index:99999;
}

