.sprite-minus,.sprite-plus{
	padding:0 0 0 12px;
	background: url(<%= asset_path "showHide/plusMinus.png"%>) no-repeat;
}

.sprite-minus { background-position: 0px 2px; }
.sprite-plus { background-position: 0px -56px; }

.clikGroup{
	clear:left;
	float:left;
	border:2px solid blue;
	padding:15px;
	margin-bottom:25px;
	width:95%;
	-webkit-border-radius: 8px;
	-moz-border-radius: 8px;
	border-radius: 8px;
}

#clikGraph{
	position:relative;
	margin:0px;
	padding:0px;
}

img.magnifier-large{position:absolute;}


#clikGraph .clik span{
	width:100%;
	margin-left:-2px;
	position:relative;
	float:left;
	text-decoration:none;
}

li.clik div{
	display:none;
	background-color:white;
	border:1px solid;
	padding:3px;
	text-decoration:underline;
}

li.clik:hover div{display:inline;}

#clikContainer, #generalClikInfoContainer, #generalClikInfo{
	width:99%;
	float:left;
}

#generalClikInfoContainer div.orderedRandomStats, #generalClikInfo{
	float: left;
	width: 49%;
	margin-left: 1%;
	margin-bottom: 10px;
	padding: 10px;
	border: 1px solid;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	border-radius: 4px;
	background-color: rgb(245, 245, 245);
	border-color: rgb(211, 211, 211);
	box-sizing: border-box;
}
#generalClikInfo{width: 99%;}

